<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wiretap.Maui.Sample.MainPage"
             Title="Wiretap Sample">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="ðŸ“¡ Wiretap.Maui Demo"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Make HTTP requests and see them captured by Wiretap"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

            <Button Text="ðŸ” Open HTTP Inspector"
                    Clicked="OnOpenInspectorClicked"
                    BackgroundColor="#1976D2"
                    TextColor="White"
                    FontAttributes="Bold"
                    Margin="0,10" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,5" />

            <Label Text="Test Requests" FontSize="18" FontAttributes="Bold" />

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="10">

                <Button Grid.Row="0" Grid.Column="0"
                        Text="GET /posts"
                        Clicked="OnGetPostsClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White" />

                <Button Grid.Row="0" Grid.Column="1"
                        Text="GET /posts/1"
                        Clicked="OnGetSinglePostClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White" />

                <Button Grid.Row="1" Grid.Column="0"
                        Text="POST /posts"
                        Clicked="OnCreatePostClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White" />

                <Button Grid.Row="1" Grid.Column="1"
                        Text="PUT /posts/1"
                        Clicked="OnUpdatePostClicked"
                        BackgroundColor="#FF9800"
                        TextColor="White" />

                <Button Grid.Row="2" Grid.Column="0"
                        Text="DELETE /posts/1"
                        Clicked="OnDeletePostClicked"
                        BackgroundColor="#F44336"
                        TextColor="White" />

                <Button Grid.Row="2" Grid.Column="1"
                        Text="GET /invalid (404)"
                        Clicked="OnGet404Clicked"
                        BackgroundColor="#757575"
                        TextColor="White" />

            </Grid>

            <Button Text="ðŸš€ Make 5 Random Requests"
                    Clicked="OnMakeBatchRequestsClicked"
                    BackgroundColor="#9C27B0"
                    TextColor="White"
                    Margin="0,5" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,5" />

            <Label Text="Response" FontSize="18" FontAttributes="Bold" />

            <Border Stroke="LightGray"
                    StrokeThickness="1"
                    Padding="10"
                    BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#1E1E1E}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <Label x:Name="ResultLabel"
                       Text="Click a button to make a request..."
                       FontSize="12"
                       FontFamily="Courier New" />
            </Border>

            <Label Text="ðŸ’¡ Tip: Look for the floating ðŸ“¡ button to inspect captured requests!"
                   FontSize="12"
                   TextColor="Gray"
                   FontAttributes="Italic"
                   HorizontalOptions="Center"
                   Margin="0,10" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
